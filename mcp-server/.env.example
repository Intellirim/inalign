# In-A-Lign Environment Configuration
# Copy to .env and customize for your deployment

# ============================================
# Neo4j Configuration
# ============================================
# Local Docker:
# NEO4J_URI=bolt://localhost:7687

# Neo4j Aura (Cloud):
NEO4J_URI=neo4j+s://xxxxxxxx.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-aura-password
NEO4J_DATABASE=neo4j

# ============================================
# API Server Configuration
# ============================================
API_PORT=8080
API_HOST=0.0.0.0
LOG_LEVEL=INFO

# ============================================
# Redis Configuration (Optional)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# Security Configuration
# ============================================
# Default threshold for blocking (0.0-1.0)
SECURITY_THRESHOLD=0.85

# Enable/disable specific detection categories
ENABLE_INJECTION_DETECTION=true
ENABLE_PII_DETECTION=true
ENABLE_EXFILTRATION_DETECTION=true

# ============================================
# On-Chain Anchoring (Optional)
# ============================================
# Ethereum RPC endpoint for merkle root anchoring
# ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_KEY
# ETH_PRIVATE_KEY=your_private_key
# ANCHOR_CONTRACT_ADDRESS=0x...

# ============================================
# Monitoring & Observability
# ============================================
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
# SENTRY_DSN=https://...@sentry.io/...
