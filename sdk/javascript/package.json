{
  "name": "@inalign/sdk",
  "version": "0.1.0",
  "description": "Official JavaScript/TypeScript SDK for InALign - AI Agent Security Platform",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "inalign",
    "ai-security",
    "agent-security",
    "llm-security",
    "prompt-injection",
    "pii-detection",
    "ai-agent"
  ],
  "author": "InALign Team <team@inalign.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/inalign/inalign-js"
  },
  "homepage": "https://inalign.io",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
